div(class='modal-header')
  div
    div(class="article__header--tags" style={color: background})
      !=list_tags(page.tags, {show_count: false, class: 'tags', style: 'list', separator: ''})
      !=date(page.date, date_format)
    h3(class="article__header--title")= page.title
  ion-icon#close(name="close")

#article__img
  a(class="progressive replace" 
  alt="image" 
  data-srcset= page.thumbnail.url_hq + " 800w," + page.thumbnail.url_hq + " 1200w"
  data-sizes="100vw"
  href=page.thumbnail.url_hq)
    img#article_preview(class="preview" src=page.thumbnail.url_preview width="100%" height="100%")

div(class="article__content")
  //p(class='article__header--description')=page.description
  !=page.content
            


  

    
