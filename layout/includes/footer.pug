#footer
  - var categoriesList = list_categories({show_count: false, class: 'tags', style: 'list', separator: ''})
  - var tagsList = list_tags({show_count: false, class: 'tags', style: 'list', separator: ''})
  - var archivesList = list_archives({show_count: false, class: 'tags', separator: ''})

  div
    h3 Categories          
    if categoriesList
      != categoriesList
    else 
      p none 
  div      
    h3 Tags
    if tagsList
      != tagsList
    else 
      p none
  div         
    h3 Archives
    if archivesList
      != archivesList
    else 
      p none
