div(class="posts")
  if page.posts.length > 0
      each post in page.posts.sort('date', -1).limit(10).toArray()
        -let background = (post.background) ? post.background : theme.thumbnail.default;
        -let thumbnail_modifier = ''
        div(class="card post fade-in", style={background: background})
          div(class="post_container")
            if post.thumbnail
              img(class="post_thumbnail", src=post.thumbnail width="100%" height="100%")
              -thumbnail_modifier = 'thumbnail'
            div(class="post_header " + thumbnail_modifier)
              div(class="post_title")
                h1
                  a(href=config.root + post.path)= post.title
                div(class="post_date")
                  !=date(post.date, date_format)

              if post.tags.length > 0 
                div(class="post_tags")
                  !=list_tags(post.tags, {show_count: false, class: 'tags', style: 'list', separator: ''})

            div(class='post_excerpt ' + thumbnail_modifier)
              !=post.excerpt
                          
            div(class="post_footer " + thumbnail_modifier)
              a(class="button" data-pjax href=config.root + post.path)= 'Read more'
              if post.github
                  a(class="button alt" href=post.github)
                    i(class="fa fa-github fa-lg")&attributes({'aria-hidden': 'true'})
              if post.heroku
                  a(class="button alt" href=post.heroku)
                    i(class="fa fa-cloud fa-lg")&attributes({'aria-hidden': 'true'})
          
        
